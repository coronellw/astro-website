---
const {tag, url} = Astro.props;
---
<style>
    a {
        color: #00539F;
        text-decoration: none;
    }
    .tag:hover {
        background-color: #00539F;
        & > a {
            color: #F8FCFD;
        }
    }
    .tag {
        margin: .25em;
        border: 1px dotted #a1a1a1;
        border-radius: .5em;
        padding: .5em 1em;
        font-size: 1.15em;
        background-color: #F8FCFD;
        cursor: pointer;
        transition: background 500ms ease-in-out;
    }
</style>
<p class="tag">
    <a href={url}>{tag}</a>
</p>